<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="alaa.esam">
        <createTable tableName="ec-shipping">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="alaa.esam">
        <addForeignKeyConstraint baseTableName="ec-shipping" baseColumnNames="order_id"
                                 constraintName="fk_shipping_order"
                                 referencedTableName="ec-order"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>