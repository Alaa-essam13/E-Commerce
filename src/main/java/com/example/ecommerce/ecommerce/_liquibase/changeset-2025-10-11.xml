<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="alaa.esam">
        <createTable tableName="ec-role">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title_en" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="title_ar" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="alaa.esam">
        <createTable tableName="ec-scope">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title_en" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="title_ar" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="alaa.essam">
        <createTable tableName="ec-user-role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="alaa.essam">
        <createTable tableName="ec-role-scope">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="scope_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>